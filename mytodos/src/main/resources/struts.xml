<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE struts PUBLIC "-//Apache Software Foundation//DTD Struts
Configuration 2.1//EN" "http://struts.apache.org/dtds/struts-2.1.dtd">
<struts>
	<constant name="struts.devMode" value="true" />
	<constant name="struts.action.extension" value="" />
	<constant name="struts.action.excludePattern" value="/images/.*,/scripts/.*,/styles/.*" />
	<constant name="struts.mapper.action.prefix.enabled" value="true" />

	<package name="default" extends="struts-default">
		<interceptors>
			<interceptor name="auth" class="authInterceptor" />

			<interceptor-stack name="authStack">
				<interceptor-ref name="defaultStack">
					<param name="params.excludeParams">dojo\..*,^struts\..*,^session\..*,^request\..*,^application\..*,^servlet(Request|Response)\..*,parameters\...*,username,password</param>
				</interceptor-ref>
				<interceptor-ref name="auth" />
			</interceptor-stack>
		</interceptors>

		<global-results>
			<result name="login">auth-login.jsp</result>
			<result name="input">auth-input.jsp</result>
			<result name="reload">auth-success.jsp</result>
		</global-results>

		<action name="" class="todosAction">
			<interceptor-ref name="authStack" />
			<result>todos-success.jsp</result>
		</action>
		
		<action name="home" class="todosAction">
			<interceptor-ref name="authStack" />
			<result>todos-success.jsp</result>
		</action>

		<action name="submit" class="todosAction" method="submit">
			<interceptor-ref name="authStack" />
			<result>todos-success.jsp</result>
		</action>

		<action name="toggle-done" class="todosAction" method="toggleDone" />

		<action name="edit" class="todosAction" method="edit">
			<interceptor-ref name="authStack" />
			<result>todos-success.jsp</result>
		</action>

		<action name="delete" class="todosAction" method="delete">
			<interceptor-ref name="authStack" />
			<result>todos-success.jsp</result>
		</action>

		<action name="clear" class="todosAction">
			<interceptor-ref name="authStack" />
			<result>cleartodos-confirm.jsp</result>
		</action>

		<action name="clear-yes" class="todosAction" method="clear">
			<interceptor-ref name="authStack" />
			<result>todos-success.jsp</result>
		</action>

		<action name="register">
			<result>register-input.jsp</result>
		</action>

		<action name="register-success" class="authAction" method="register">
			<result>register-success.jsp</result>
			<result name="error">register-error.jsp</result>
		</action>

		<action name="login" class="authAction">
			<result type="redirect">/</result>
		</action>

		<action name="logout" class="authAction" method="logout">
			<result type="redirect">/</result>
		</action>

		<action name="unregister" class="authAction" method="unregisterConfirm">
			<result name="confirm">unregister-confirm.jsp</result>
		</action>

		<action name="unregister-yes" class="authAction" method="unregister">
			<result>unregister-success.jsp</result>
		</action>
	</package>
</struts>
